<ui:DialogWindow x:Class="PortingAssistantVSExtensionClient.Dialogs.TestDeploymentDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
             xmlns:local="clr-namespace:PortingAssistantVSExtensionClient.Dialogs"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="750" Height="400" Width="750">
    <Grid Margin="0,0,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="750">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <GroupBox Header="General" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="180" Width="230" Margin="20,20,0,0">
            <Grid Margin="0,0,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <TextBox x:Name="InputBox1" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Width="120" Margin="80,30,0,0" TextWrapping="Wrap" Text=""/>
                <TextBox x:Name="InputBox2" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Width="120" Margin="80,70,0,0" TextWrapping="Wrap" Text=""/>
                <TextBox x:Name="InputBox3" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Width="120" Margin="80,110,0,0" TextWrapping="Wrap" Text=""/>
                <Label Content="IAM role" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0" />
                <Label Content="VPC" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0" />
                <Label Content="Subnet" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,110,0,0" />
            </Grid>
        </GroupBox>
        
        <GroupBox Header="" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="180" Width="250" Margin="0,20,0,0">
            <Grid Margin="0,0,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <CheckBox x:Name="DBConfigure" Grid.Column="1" Grid.Row="0" Margin="0,-5,0,0" Content="Database Settings" HorizontalAlignment="Left" VerticalAlignment="Top" Unchecked="DBConfigure_Unchecked" IsChecked="True" Checked="DBConfigure_Checked"/>
                <Label x:Name="DbSecretArnLabel" Grid.Column="1" Grid.Row="0" Margin="0,30,0,0" Content="Secret ARN" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="25" Width="120" Visibility="Visible"/>
                <Label x:Name="SqlSgLabel" Grid.Column="1" Grid.Row="0" Margin="0,70,0,0" Content="Security Group" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Width="120" Visibility="Visible"/>
                <Label x:Name="SqlConnectionLabel" Grid.Column="1" Grid.Row="0" Margin="0,110,0,0" Content="Connection String" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Width="120" Visibility="Visible" />
                <TextBox x:Name="DbSecretArnInput" Grid.Column="1" Grid.Row="0" Margin="110,30,0,0" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Visibility="Visible"/>
                <TextBox x:Name="SqlSgInput" Grid.Column="1" Grid.Row="0" Margin="110,70,0,0" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Visibility="Visible"/>
                <TextBox x:Name="SqlConnectionInput" Grid.Column="1" Grid.Row="0" Margin="110,110,0,0" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"  Visibility="Visible"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="80" Width="220" Margin="0,20,0,0">
            <Grid Margin="0,0,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <CheckBox x:Name="ADConfigure" Grid.Column="2" Grid.Row="0" Margin="0,-5,0,0" Content="Active Directory Settings" HorizontalAlignment="Left"  VerticalAlignment="Top" Unchecked="ADConfigure_Unchecked" IsChecked="True" Checked="ADConfigure_Checked"/>
                <TextBox x:Name="ADInput" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Left" Height="25" Margin="80,30,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Visibility="Visible"/>
                <Label x:Name="ADLabel" Grid.Column="2" Grid.Row="0" Content="Directory-ID" HorizontalAlignment="Left" Height="25" Margin="0,30,0,0" VerticalAlignment="Top" Visibility="Visible"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="100" Width="220" Margin="0,100,0,0">
            <Grid Margin="0,0,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <CheckBox x:Name="IISConfigure" Grid.Column="2" Grid.Row="0" Margin="0,-5,0,0" Content="IIS Settings" HorizontalAlignment="Left"  VerticalAlignment="Top" IsChecked="True" Checked="IISConfigure_Checked" Unchecked="IISConfigure_Unchecked"/>
                <TextBox x:Name="ApplicationPools" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Left" Height="25" Margin="110,30,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="90" Visibility="Visible"/>
                <Label x:Name="ApplicationPoolsLabel" Grid.Column="2" Grid.Row="0" Content="Application Pools" HorizontalAlignment="Left" Height="25" Margin="0,30,0,0" VerticalAlignment="Top" Visibility="Visible"/>
            </Grid>
        </GroupBox>
        <ScrollViewer Name ="logs" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Visibility="Visible" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" Margin="20,0,0,0" VerticalAlignment="Top" Height="100" Width="700">
            <TextBlock Name="logHolder"  TextWrapping="Wrap" VerticalAlignment="Top" FontSize="12" Padding="30" Height="90" >
            </TextBlock>
        </ScrollViewer>
        <GroupBox Header="Deployment logs" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" HorizontalAlignment="Left" VerticalAlignment="Top" Height="90" Margin="20,0,0,0"  Width="700" FontSize="15"/>
        <Button x:Name="DeployButton" Grid.Column="2" Grid.Row="2"  Content="Deploy" HorizontalAlignment="Right" Margin="0,-20,50,0" Height="20" Width="75" Click="Button_Click_1"/>
        <Button x:Name="Cancel" Content="Cancel" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Right" Margin="0,-20,140,0"  Height="20" Width="75"  Click="Button_Click"/>
    </Grid>
</ui:DialogWindow>
