        <Label Content="Email" HorizontalAlignment="Left" Margin="21,519,0,0" VerticalAlignment="Top" Height="27" Width="114" FontSize="14"/>
        <TextBox x:Name="CustomerEmail" HorizontalAlignment="Left" Height="31" Margin="21,551,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="590"/>
