        <Label x:Name="ChooseFrameworkLabel" Content="choose a target .NET framework to port your solution" HorizontalAlignment="Left" Margin="25,36,-27,0" VerticalAlignment="Top" Width="455" Opacity="0.6" FontSize="10"/>
