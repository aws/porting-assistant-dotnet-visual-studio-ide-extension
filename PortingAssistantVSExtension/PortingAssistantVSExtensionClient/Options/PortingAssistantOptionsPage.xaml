        <TextBox x:Name="UserEmailBox" HorizontalAlignment="Left" Height="23" Margin="136,346,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.074,-3.333"/>
